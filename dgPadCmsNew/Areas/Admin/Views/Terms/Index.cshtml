@model IEnumerable<Term>

@{
    ViewData["Title"] = "Terms";
}

<h1>Terms</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table sorting" id="terms">
    <thead>
        <tr class="home">

            <th>
                Name
            </th>
            <th>
                Code
            </th>
            <th>
                Taxonomy
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr id="id_@item.Id" class="@item.code">

            <td>
                @item.Name
            </td>
            <td>
                @item.code
            </td>
            <td>
                @item.Taxonomy.Name
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="confirmDeletion" asp-action="Delete" asp-route-id="@item.Id">Delete</a>

            </td>
        </tr>
        }
    </tbody>
</table>